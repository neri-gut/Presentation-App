{
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "publisher": "Multimedia Presentation App Team",
    "copyright": "Copyright (c) 2025 Multimedia Presentation App",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "category": "Education",
    "shortDescription": "Aplicación multiplataforma para presentaciones multimedia religiosas",
    "longDescription": "Aplicación open-source para gestionar y presentar contenido multimedia religioso en múltiples pantallas durante reuniones y presentaciones.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "createUpdaterArtifacts": true
  },
  "build": {
    "beforeDevCommand": "pnpm start",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build",
    "devUrl": "http://localhost:3001"
  },
  "productName": "Multimedia Presentation App",
  "mainBinaryName": "multimedia-presentation-app",
  "version": "../package.json",
  "identifier": "com.presentation-app.multimedia",
  "plugins": {
    "updater": {
      "endpoints": [
        "https://youtu.be/ZXjlZBisYPQ"
      ],
      "pubkey": ""
    }
  },
  "app": {
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'; connect-src ipc: http://ipc.localhost"
    },
    "windows": [
      {
        "title": "Multimedia Presentation App",
        "label": "main",
        "minWidth": 1000,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "decorations": true,
        "alwaysOnTop": false,
        "useHttpsScheme": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/SystemTray1.ico",
      "iconAsTemplate": true
    },
    "withGlobalTauri": false
  }
}
